<Window x:Class="All_New_Jongbet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:All_New_Jongbet"
        mc:Ignorable="d"
        Title="All_New_Jongbet" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        FontFamily="Century Gothic">

    <Grid Background="#f0fdf4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#dee2e6" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,30">
                    <TextBlock Text="new" Foreground="Gold" FontSize="20" FontFamily="Bahnschrift"/>
                    <TextBlock Text="JONGBET" Foreground="#32325d" FontSize="40" FontFamily="./Fonts/#Avocalist" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <ToggleButton x:Name="DashboardButton" Content="Dashboard" Tag="&#xE75E;" Style="{StaticResource SidebarButton}" IsEnabled="False" Click="NavigateButton_Click"/>

                    <Expander x:Name="SetupExpander" Header="Setup" Tag="&#xE8D5;" Style="{StaticResource SidebarExpanderStyle}">
                        <StackPanel>
                            <ToggleButton x:Name="TradeSetupButton" Content="Trade Setup" Tag="&#xE9E9;" Style="{StaticResource SidebarButton}" IsEnabled="False" Click="NavigateButton_Click"/>
                            <ToggleButton x:Name="StrategySetupButton" Content="Strategy Setup" Tag="&#xE9D5;" Style="{StaticResource SidebarButton}" IsEnabled="False" Click="NavigateButton_Click"/>
                        </StackPanel>
                    </Expander>

                    <ToggleButton x:Name="LogsButton" Content="Logs" Tag="&#xE7E7;" Style="{StaticResource SidebarButton}" IsEnabled="False" Click="NavigateButton_Click"/>
                </StackPanel>

                <Button Grid.Row="2" x:Name="SettingsButton" Content="Settings" Tag="&#xE713;" Style="{StaticResource SidebarFooterButton}" VerticalAlignment="Bottom" IsEnabled="False" Click="FooterButton_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Padding="30,15" Background="#f0fdf4">
                <ItemsControl ItemsSource="{Binding DisplayedNotifications}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Message}" Style="{Binding StyleKey, Converter={StaticResource StyleConverter}}" Margin="0,0,10,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>